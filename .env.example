# Database - Use pgbouncer pooler for better connection management
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"

# Direct connection (for migrations only if needed)
DATABASE_URL_DIRECT="postgresql://user:password@host:5432/postgres"

# NextAuth.js
NEXTAUTH_URL="https://your-domain.onrender.com"
NEXTAUTH_SECRET="generate-random-secret"
NEXTAUTH_DEBUG=false

# Email for magic links
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@your-domain.com"

# Football Data API
FOOTBALL_DATA_API_KEY="your-football-data-key"
FOOTBALL_DATA_BASE_URL="https://api.football-data.org/v4"

# OpenRouter AI API
OPENROUTER_API_KEY="your-openrouter-key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# SerpAPI Sports Results
SERPAPI_API_KEY="your-serpapi-key"

# LLM Provider
OPENAI_API_KEY=""

# Sports Data Provider
SPORTS_API_KEY=""
SPORTS_API_BASE_URL="https://api.api-football.com/v3"
ENABLE_REAL_SPORTS_DATA="false"

# AI Analysis
ENABLE_AI_ANALYSIS="false"

# App Settings
NODE_ENV="production"

# Upstash Redis (Cloud)
REDIS_URL="rediss://default:password@your-redis.upstash.io:6379"

# Dev mode: set to 1 to use sync analysis without Redis/worker
# DEV_ANALYZE_SYNC=1
RAPIDAPI_KEY="your-rapidapi-key"
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"

# LLM Provider
OPENAI_API_KEY="sk-your-openai-key"

# Sports Data Provider (API-Football via RapidAPI)
SPORTS_API_KEY="your-rapidapi-key"
