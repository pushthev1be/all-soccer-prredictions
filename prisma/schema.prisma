generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_DIRECT")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  predictions   Prediction[]
  accounts      Account[]
  sessions      Session[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model CompetitionMap {
  id                     String   @id @default(cuid())
  canonicalCompetitionId String   @unique
  name                   String
  country                String?
  provider               String
  providerCompetitionId  String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("competition_maps")
}

model TeamMap {
  id                String   @id @default(cuid())
  canonicalTeamId   String   @unique
  name              String
  country           String?
  provider          String
  providerTeamId    String
  synonyms          String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("team_maps")
}

model Prediction {
  id                      String   @id @default(cuid())
  userId                  String
  status                  String   @default("pending")
  
  canonicalCompetitionId  String
  canonicalHomeTeamId     String
  canonicalAwayTeamId     String
  providerFixtureId       String?
  kickoffTimeUTC          DateTime
  
  market                  String
  pick                    String
  odds                    Float?
  stake                   Float?
  reasoning               String?
  bookmaker               String?
  
  result                  String?
  resultUpdatedAt         DateTime?
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  user                    User     @relation(fields: [userId], references: [id])
  feedback                Feedback?
  sources                 Source[]
  
  @@index([userId])
  @@index([status])
  @@index([kickoffTimeUTC])
  @@map("predictions")
}

model Feedback {
  id                      String   @id @default(cuid())
  predictionId            String   @unique
  summary                 String
  strengths               String[]
  risks                   String[]
  missingChecks           String[]
  contradictions          String[]
  keyFactors              String[]
  whatWouldChangeMyMind   String[]
  dataQualityNotes        String[]
  confidenceExplanation   String
  confidenceScore         Float
  recommendedBet          String?
  qualityTier             String?
  dataCompleteness        Int?
  actionableInsights      Json?
  confidenceIntervals     Json?
  alternativeBets         Json?
  alternativeViews        Json?
  numbersSummary          Json?
  historicalComparisons   Json?
  validationIssues        String[] @default([])
  validationSuggestions   String[] @default([])

  // Rich analysis fields
  teamComparison          Json?
  formAnalysis            Json?
  headToHeadStats         Json?
  marketInsight           Json?
  tacticalAnalysis        String[]
  injuryNews              String[]
  scorelinePrediction     String?
  likelyScorers           Json?
  
  llmModel                String
  llmPromptVersion        String
  processingTimeMs        Int
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  prediction              Prediction @relation(fields: [predictionId], references: [id])
  citations               Citation[]
  
  @@map("feedback")
}

model Citation {
  id           String   @id @default(cuid())
  feedbackId   String
  sourceId     String
  claim        String
  excerpt      String
  
  feedback     Feedback @relation(fields: [feedbackId], references: [id])
  source       Source   @relation(fields: [sourceId], references: [id])
  
  @@map("citations")
}

model Source {
  id           String   @id @default(cuid())
  predictionId String
  provider     String
  url          String?
  fetchedAt    DateTime @default(now())
  title        String?
  snippet      String?
  rawJson      Json?
  entityRefs   String[]
  
  prediction   Prediction @relation(fields: [predictionId], references: [id])
  citations    Citation[]
  
  @@map("sources")
}

model Fixture {
  id          String   @id @default(cuid())
  homeTeam    String
  awayTeam    String
  competition String
  kickoff     DateTime
  status      String   @default("SCHEDULED") // SCHEDULED, LIVE, FINISHED
  homeScore   Int?
  awayScore   Int?
  venue       String?
  source      String   @default("web-scraper")
  scrapedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([competition])
  @@index([kickoff])
  @@index([homeTeam])
  @@index([awayTeam])
  @@map("fixtures")
}